<div class="container">
    <p>Number of users: <%- users %></p>
    <a href="/admin/add-blog" class="blue-btn">New Blog</a>
</div>
<div class="container articles">
    <% blogData.forEach(item => { %>
        <div class="">
            <div class="article-card">
                <a href="/blog/<%= item.topic%>/<%= item.slug.toLowerCase() %>">
                    <h2><%= item.article.title%></h2>
                    <div class="article-body">
                        <div class="article-dates">
                            <p>Published: <%= item.createdAt%></p>
                            <p>Last updated: <%= item.updatedAt%></p>
                        </div>
                        <p>Author: <%= item.author%></p>
                    </div>
                    <div class="article-topic <%= item.topic%>-bg">
                        <p><%= item.topic%></p>
                    </div>
                </a>
            </div>
            <form method="post">
                <input type="submit" class="submit" name="<%= item.slug.toLowerCase() %>" value="Edit">
                <input type="submit" class="submit" name="<%= item.slug.toLowerCase() %>" value="Delete">
            </form>
        </div>
    <% }); %>
</div>
